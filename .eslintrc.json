{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2020": true,
        "node": true
    },
   "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module",
        "allowImportExportEverywhere": true
    },
    "rules": {
          "semi": ["error", "always"],
        "quotes": ["error", "double"],
        "no-class-assign":"off",
        "no-restricted-imports":"off"
    }
}
